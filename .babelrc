{
    "presets": [
        [
            "es2015",
            {
                "modules": false
            }
        ],
        "es2016",
        "stage-2",
        "angular2"
    ],
    "plugins": [
        "transform-es2015-modules-commonjs"
    ],
    "env": {
        "test": {
            "plugins": [
                [
                    "__coverage__",
                    {
                        "ignore": "*.+(test|stub).*"
                    }
                ]
            ]
        }
    }
}